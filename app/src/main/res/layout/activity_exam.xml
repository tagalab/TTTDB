<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layExamView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F6CD"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnBack3"
        style="@style/BackButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:text="リストに戻る" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnExamSpeech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_next"
                    android:text="SPEECH" />

                <Button
                    android:id="@+id/btnExamHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/button_next"
                    android:text="ヒント"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtExamMeanTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="問　題："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtExamMean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="3"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtExamInputTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="入　力："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtExamInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <Button
                        android:id="@+id/btnA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="a"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="b"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="c"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="d"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="e"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="f"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="g"
                        android:textAllCaps="false" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <Button
                        android:id="@+id/btnH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="h"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="i"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnJ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="j"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="k"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="l"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="m"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="n"
                        android:textAllCaps="false" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <Button
                        android:id="@+id/btnO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="o"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="p"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="q"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="r"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="s"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="t"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="u"
                        android:textAllCaps="false" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7">

                    <Button
                        android:id="@+id/btnV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="v"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="w"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="x"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="y"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#04E8A7"
                        android:text="z"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnBS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:layout_weight="2"
                        android:backgroundTint="#04E8A7"
                        android:text="１文字消す" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_next"
                    android:text="決定" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>