<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="単語情報"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInfoSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPEECH" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInfoWordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="単　語："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtInfoWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInfoTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品　詞："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtInfoType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInfoMeanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意　味："
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInfoMean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:scrollbars="vertical"
                android:singleLine="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInfoMemoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="メ　モ："
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtInfoMemo01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="top"
                android:hint="メモを保存できます。\n改行して複数行の入力ができます。"
                android:inputType="textMultiLine|text"
                android:lines="5"
                android:scrollbars="vertical"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="ヒントあり" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tblHintHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtHintNoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回数　" />

                    <TextView
                        android:id="@+id/txtHintTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="テスト時間　" />

                    <TextView
                        android:id="@+id/txtHintResultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="結果　" />

                    <TextView
                        android:id="@+id/txtHintInputTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入力した内容" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="ヒントなし" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tblNomalHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNomalNoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回数　" />

                    <TextView
                        android:id="@+id/txtNomalTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="テスト時間　" />

                    <TextView
                        android:id="@+id/txtNomalResultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="結果　" />

                    <TextView
                        android:id="@+id/txtNomalInputTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入力した内容" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>